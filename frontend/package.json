{
    "name": "clef-viewer",
    "version": "1.0.0",
    "description": "An Electron application with Vue and TypeScript",
    "main": "./out/main/index.js",
    "author": "example.com",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/azygis/clef-viewer.git"
    },
    "homepage": "https://electron-vite.org",
    "scripts": {
        "format": "prettier --write .",
        "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
        "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "yarn typecheck:node && yarn typecheck:web",
        "start": "electron-vite preview",
        "dev": "electron-vite dev",
        "build": "yarn typecheck && electron-vite build && cp src/main/loading-dialog.html out/main/",
        "postinstall": "electron-builder install-app-deps",
        "build:unpack": "yarn build && electron-builder --dir",
        "build:win": "yarn build && electron-builder --win",
        "build:mac": "yarn build && electron-builder --mac",
        "build:linux": "yarn build && electron-builder --linux",
        "build:deb": "yarn build && electron-builder --linux deb",
        "build:supported": "yarn build && electron-builder --linux --win --mac"
    },
    "dependencies": {
        "@dreamonkey/vue-signalr": "^1.2.0",
        "@electron-toolkit/preload": "^3.0.0",
        "@electron-toolkit/utils": "^3.0.0",
        "@microsoft/signalr": "^8.0.7",
        "@vueuse/core": "^12.2.0",
        "electron-updater": "^6.1.7",
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config": "^1.0.2",
        "@electron-toolkit/eslint-config-ts": "^2.0.0",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@mdi/font": "^7.4.47",
        "@rushstack/eslint-patch": "^1.10.3",
        "@types/node": "^20.14.8",
        "@vitejs/plugin-vue": "^5.0.5",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/eslint-config-typescript": "^13.0.0",
        "axios": "^1.7.9",
        "electron": "^31.0.2",
        "electron-builder": "^24.13.3",
        "electron-vite": "^2.3.0",
        "eslint": "^8.57.0",
        "eslint-plugin-vue": "^9.26.0",
        "pinia": "^2.3.0",
        "prettier": "^3.3.2",
        "sass-embedded": "^1.83.0",
        "typescript": "^5.5.2",
        "vite": "^6.0.3",
        "vite-plugin-vuetify": "^2.0.4",
        "vue": "^3.5.13",
        "vue-router": "^4.5.0",
        "vue-tsc": "^2.1.10",
        "vuetify": "^3.7.5"
    }
}
